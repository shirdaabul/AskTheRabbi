<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="350dp"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:gravity="left">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/show_image"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/download_btn"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name:"
            android:id="@+id/show_name"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="2dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_name"
            android:id="@+id/mess_lin"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:visibility="gone"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_file_black_24dp"
            android:id="@+id/messageIvFile"
            android:layout_toLeftOf="@id/show_message" />

            <TextView
                android:id="@+id/show_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="hello"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/mess_lin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/show_date"
                android:textSize="12sp"
                android:textColor="#000"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello000000000"
                android:id="@+id/show_time"
                android:textSize="12sp"
                android:textColor="#000"
                android:padding="2dp" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>